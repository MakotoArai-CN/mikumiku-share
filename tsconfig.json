{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "bun-types",
            "vite-plugin-monkey/client",
            "greasemonkey"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ]
}